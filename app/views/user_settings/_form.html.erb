<!-- Modal -->
<div class="modal fade" id="userSettingModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
				<h4 class="modal-title" id="myModalLabel">Configuração do usuário</h4>
			</div>
			<div class="modal-body">
				<%= simple_form_for @user_setting, html: {class: 'form-horizontal' } do |f| %>
					  <% if @user_setting.errors.any? %>
						<div id="error_explanation">
						  <h2><%= pluralize(@user_setting.errors.count, "error") %> prohibited this user_setting from being saved:</h2>
					
						  <ul>
						  <% @user_setting.errors.full_messages.each do |msg| %>
							<li><%= msg %></li>
						  <% end %>
						  </ul>
						</div>
					  <% end %>
						<%= f.input :speedUnit %>
			</div>
			<div class="modal-footer">
				<%= f.submit "submit", :class => 'btn btn-primary' %>
      		</div>
			<% end %>
    	</div><!-- /.modal-content -->
  	</div><!-- /.modal-dialog -->
</div><!-- /.modal -->