<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => 'form_vertical' }) do |f| %>
<div class="modal fade" id="registrationNewModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Edit <%= resource_name.to_s.humanize %></h4>
      </div>
      <div class="modal-body">
        <%= devise_error_messages! %>
        
        <div><%= f.label :email %><br />
        <%= f.email_field :email, :autofocus => true %></div>
        
        <div><%= f.label :password %><br />
        <%= f.password_field :password %></div>
        
        <div><%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation %></div>
        <div><%= f.label :admin %><br />
        <%= f.check_box :admin %></div>

      </div>
      <div class="modal-footer">
		  <%= f.submit "Sign up", :class => "btn btn-primary", :remote => true %>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
<% end %>