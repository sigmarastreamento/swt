<!-- Modal -->
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }, :class => "navbar-form" ) do |f| %>
<div class="modal fade" id="registrationEditModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel"><%= t(:label_user_settings) %></h4>
      </div>
      <div class="modal-body">
		  <%= devise_error_messages! %>
		  <div><%= f.label :email %><br />
		  <%= f.email_field :email, :autofocus => true, :class => "form-control" %></div>
		
		  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
			<div><%= t(:label_message_email) %><%= resource.unconfirmed_email %></div>
		  <% end %>
		
		  <div><%= f.label t(:password) %> <i><%= t(:label_message_modify_password) %></i><br />
		  <%= f.password_field :password, :autocomplete => "off", :class => "form-control" %></div>
		
		  <div><%= f.label t(:password_confirmation) %><br />
		  <%= f.password_field :password_confirmation, :class => "form-control" %></div>
		
		  <div><%= f.label t(:current_password) %> <i><%= t(:label_message_confirmation_password) %></i><br />
		  <%= f.password_field :current_password, :class => "form-control" %></div>		  
      </div>
      <div class="modal-footer">
		  <%= f.submit t(:label_update), :class => "btn btn-primary", :remote => true %>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
<% end %>